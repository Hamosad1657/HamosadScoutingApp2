{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Scouting App",
	"description": "A scouting app designed in JSON.",
	"type": "object",
	"required": [
		"name"
	],
	"properties": {
		"name": {
			"description": "The name of the app.",
			"type": "string"
		},
		"teamNumber": {
			"description": "The number of your team.",
			"type": "integer"
		},
		"pages": {
			"description": "The pages of the app that aren't a part of any report.",
			"type": "object",
			"properties": {
				"home": {
					"$ref": "homePage.schema.json"
				}
			},
			"required": [
				"home"
			],
			"patternProperties": {
				"^[a-z]+([a-z][A-Z])*": {
					"$ref": "page.schema.json"
				}
			}
		},
		"reports": {
			"type": "object",
			"patternProperties": {
				"^[a-z]+([a-z][A-Z])*": {
					"$ref": "report.schema.json"
				}
			}
		}
	}
}